{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": [
		"@sepruko/shared-config/tsconfig/browser"
	],
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"paths": {
			"@/components/*": [
				"./components/*.astro",
				"./components/*.jsx",
				"./components/*.tsx",
				"./components/*/index.astro",
				"./components/*/index.jsx",
				"./components/*/index.tsx"
			],
			"@/layouts/*": [
				"./layouts/*.astro"
			]
		}
	},
	"references": [
		{
			"path": "./tsconfig.root.json"
		}
	]
}
