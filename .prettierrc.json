{
	"$schema": "https://json.schemastore.org/prettierrc",
	"experimentalTernaries": true,
	"htmlWhitespaceSensitivity": "strict",
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		},
		{
			"files": "*.{yaml,yml}",
			"options": {
				"printWidth": 80,
				"singleQuote": true,
				"tabWidth": 2,
				"useTabs": false
			}
		},
		{
			"files": ".github/workflows/**/*.yml",
			"options": {
				"proseWrap": "preserve"
			}
		},
		{
			"files": "*.md",
			"options": {
				"printWidth": 80,
				"singleQuote": true
			}
		}
	],
	"plugins": [
		"prettier-plugin-astro"
	],
	"printWidth": 100,
	"proseWrap": "always",
	"tabWidth": 4,
	"useTabs": true,
	"vueIndentScriptAndStyle": true
}
