---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header";
import BlankLayout from "@/layouts/BlankLayout.astro";

interface Props {
	/**
	 * The title of the webpage, used for the `<title>` and `og:title`.
	 */
	title: string;

	/**
	 * The description of the webpage, used for `og:description`.
	 *
	 * @default `":3"`
	 */
	description?: string;

	/**
	 * The children of the layout, passed to a `<slot />`.
	 */
	children: any;
}

const { title, description } = Astro.props;
---

<BlankLayout title={title} description={description}>
	<Header slot="pre-main" />
	<slot />
	<Footer slot="pos-main" />
</BlankLayout>
